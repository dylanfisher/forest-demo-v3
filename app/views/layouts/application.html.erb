<!DOCTYPE html>
<html class="no-js js-preload" lang="en" data-root-url="<%= root_url %>">
  <head>
    <%= render 'layouts/shared_head' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%#= favicon_link_tag 'favicon.png', rel: 'icon', type: 'image/png' %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body class="<%= @html_classes.try(:join, ' ') %>">
    <%= render 'shared/header' %>
    <main id="application-wrapper" class="application-wrapper d-flex flex-column">
      <%= yield %>
    </main>
    <%= render 'shared/footer' unless @hide_footer %>
  </body>
</html>
